<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/side_icon"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#fff"
            android:gravity="center"
            android:textSize="28dp"
            android:text="Voisins en Or"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"/>

        <LinearLayout
            android:id="@+id/fragment_home_profil"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:text="Profil"
                android:textSize="28dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_home_messagerie"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:text="Messagerie"
                android:textSize="28dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_home_map"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:text="Carte"
                android:textSize="28dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_home_aide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:text="Aide"
                android:textSize="28dp"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/fragment_home_deconnexion"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:text="Se dÃ©connecter"
                android:textSize="28dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
